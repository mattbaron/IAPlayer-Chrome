{
   "manifest_version": 2,
   "name": "IAPlayer-Chrome",
   "version": "0.1",
   "description": "Play internet audio streams",
   
   "permissions": [
      "tabs"
   ],
   
   "icons": {
      "16":  "/icons/app.png",
      "48":  "/icons/app.png",
      "128": "/icons/app.png"
   },
   
   "background": {
      "scripts": ["/src/background.js"]
   },
   
   "browser_action": {
      "default_popup": "/src/popup/popup.html"
   }
   
}